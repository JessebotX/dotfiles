# main EDITOR
export EDITOR="gvim -v"

# User Directories
export XDG_CONFIG_HOME="$HOME"/.config
export XDG_CACHE_HOME="$HOME"/.cache
export XDG_DATA_HOME="$HOME"/.local/share
export XDG_STATE_HOME="$HOME"/.local/state

export XDG_DESKTOP_DIR="$HOME/Desktop"
export XDG_DOWNLOAD_DIR="$HOME/Downloads"
export XDG_TEMPLATES_DIR="$HOME/Templates"
export XDG_PUBLICSHARE_DIR="$HOME/Public"
export XDG_DOCUMENTS_DIR="$HOME/Documents"
export XDG_MUSIC_DIR="$HOME/Music"
export XDG_PICTURES_DIR="$HOME/Pictures"
export XDG_VIDEOS_DIR="$HOME/Videos"

export GAMES="$HOME/Games"
export APPLICATIONS="$HOME/Applications"
export REPOS="$HOME/repos"

export LYNX_LSS="$XDG_CONFIG_HOME"/lynx/lynx.lss
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc
export XAUTHORITY="$XDG_RUNTIME_DIR"/Xauthority
export XINITRC="$XDG_CONFIG_HOME"/X11/xinitrc
export XSERVERRC="$XDG_CONFIG_HOME"/X11/xserverrc
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

#
# pfetch 
# 
export PF_INFO="ascii title os kernel wm shell pkgs memory palette"
export PF_SEP=""
export PF_COL1=2
export PF_COL3=1

#
# fff
#
export FFF_HIDDEN=1
export FFF_TRASH=$HOME/.local/share/trash
export FFF_FILE_FORMAT="%f"
export FFF_MARK_FORMAT="> %f*"

# 
# shfm
#
export SHFM_OPENER="/home/user/.local/bin/shfm-open"

export GOPATH="$XDG_DATA_HOME"/go 
export CARGO_HOME="$XDG_DATA_HOME"/cargo

# PATH
export PATH="$PATH:$HOME/.local/bin/:/usr/sbin/:/usr/local/sbin/:/sbin/:$HOME/.local/share/applications/:$GOPATH/bin"
export PATH="$PATH:$XDG_DATA_HOME/cargo/env:$XDG_DATA_HOME/cargo/bin"

