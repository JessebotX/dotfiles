# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	alias ls='ls --color=auto'
	alias dir='dir --color=auto'
	alias vdir='vdir --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

alias game="cd $REPOS/txev/fractus"

alias dot="cd $XDG_CONFIG_HOME/dotfiles"
alias dots="cd $XDG_CONFIG_HOME/dotfiles"
alias dotfiles="cd $XDG_CONFIG_HOME/dotfiles"
alias scripts="cd $SCRIPTS"
alias r="cd $REPOS"
alias repos="cd $REPOS"
#alias txev="cd $REPOS/txev"
#alias user="cd $REPOS/usernamesystems"

alias vi="$EDITOR"
alias vim="$EDITOR"
alias e="$SCRIPTS/edit ~"
alias '?'="$SCRIPTS/search"
alias sxiv="nsxiv"
alias tm="trash-put"

# prevent accidental destructive commands
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# exa
if [ -x "$(command -v exa)" ]; then
	alias exa="exa --icons -a"
	alias ll='exa --icons -a --long'
fi

# prioritize doas
if [ -x "$(command -v doas)" ]; then
	alias sudo="doas"
fi


