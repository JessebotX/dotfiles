# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	alias ls='ls --color=auto'
	alias dir='dir --color=auto'
	alias vdir='vdir --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

alias dot="cd ~/.config/dotfiles"
alias dots="cd ~/.config/dotfiles"
alias dotfiles="cd ~/.config/dotfiles"
alias scripts="cd ~/.local/bin/"
alias repos="cd ~/repos"
alias txev="cd ~/repos/txev"
alias user="cd ~/repos/usernamesystems"

alias v="$EDITOR"
alias vim="$EDITOR"
alias nvim="$EDITOR"
alias nsxiv="sxiv"
alias e="~/.local/bin/edit ~"
alias tm="trash-put"
alias '?'="~/.local/bin/search"

# prevent accidental destructive commands
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# exa
if [ -x "$(command -v exa)" ]; then
	alias exa="exa --icons -a"
	alias ll='exa --icons -a --long'
fi

# prioritize doas
if [ -x "$(command -v doas)" ]; then
	alias sudo="doas"
fi


