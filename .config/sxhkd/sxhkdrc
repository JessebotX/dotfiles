# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + shift + Return
	st

super + e
	pcmanfm

super + p
	dmenu_run -b -l 10 -h 30

super + shift + minus
	amixer set Master 1%-; kill -44 $(pidof dwmblocks)

super + shift + equal
	amixer set Master 1%+; kill -44 $(pidof dwmblocks)

XF86AudioLowerVolume
	amixer set Master 1%-; kill -44 $(pidof dwmblocks)

XF86AudioRaiseVolume
	amixer set Master 1%+; kill -44 $(pidof dwmblocks)

XF86AudioMute 
	amixer set Master toggle; kill -44 $(pidof dwmblocks)

XF86MonBrightnessDown 
	brightnessctl set 5%-

XF86MonBrightnessUp 
	brightnessctl set 5%+

